@model TeklifHariciModel
@{
    ViewBag.Title = "Düzenle";
    Html.AktifMenuÖğesiSistemAdıBelirle("HariciTeklif");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="content-header clearfix">
    <h1 class="pull-left">
        Teklif Düzenle
        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("Teklif listesine geri dön", "TeklifHariciListe")</small>
    </h1>
    <div class="pull-right">
        <button class="btn bg-blue" type="submit" name="kaydet">
            <i class="fa fa-floppy-o"></i>
            Kaydet
        </button>
        <button class="btn bg-blue" type="submit" name="kaydet-devam">
            <i class="fa fa-floppy-o"></i>
            Kaydet ve Devam Et
        </button>
        <span id="teklif-sil" class="btn bg-red">
            <i class="fa fa-trash-o"></i>
            Sil
        </span>
    </div>
</div>
    @Html.Partial("_EkleVeyaDüzenleTeklifHarici", Model)
}
@Html.DeleteConfirmation("TeklifHariciSil", "teklif-sil")

