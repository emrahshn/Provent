@model CrmFirmaModel
@{
    ViewBag.Title = "Düzenle";
    Html.AktifMenuÖğesiSistemAdıBelirle("Firmalar");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Firma düzenle - @Model.Adı
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("Firma listesine geri dön", "FirmaListe")</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="kaydet" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Kaydet
            </button>
            <button type="submit" name="kaydet-devam" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Kaydet ve Devam
            </button>
            <span id="Firma-sil" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                Sil
            </span>
        </div>
    </div>
    @Html.Partial("_EkleVeyaDüzenleFirma", Model)
    @Html.Partial("FirmaKutusu", Model)
}
@Html.DeleteConfirmation("FirmaSil", "Firma-sil")
@Html.Partial("FirmaYetkiliEkle", new CrmFirmaYetkilisiModel())
