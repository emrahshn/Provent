@model CrmFirmaYetkilisiModel
@{
    ViewBag.Title = "kart";
    Html.AktifMenuÖğesiSistemAdıBelirle("FirmaYetkilisi");

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="content-header clearfix">
        <h1 class="pull-left">
            Firma Yetkilisi Kartı - @Model.Adı
        </h1>

        <div class="pull-right">
            <span id="yetkili-sil" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                Sil
            </span>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.Adı)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.Adı
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.Soyadı)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.Soyadı
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.CepTel)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.CepTel
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.Email)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.Email
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.DoğumTarihi)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.DoğumTarihi.ToShortDateString()
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.FirmaId)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.KurumAdı
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("FirmaYetkilisiKutusu", Model)
}
@Html.DeleteConfirmation("FirmaYetkilisiSil", "yetkili-sil")
