@model CrmKurumModel
@{
    ViewBag.Title = "kart";
    Html.AktifMenuÖğesiSistemAdıBelirle("Firmalar");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="content-header clearfix">
        <h1 class="pull-left">
            Kurum kartı - @Model.Adı
        </h1>

        <div class="pull-right">
            <span id="kurum-sil" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                Sil
            </span>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.Adı)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                    @Model.Adı
                            </div>
                            </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.Tel)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.Tel
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.Faks)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.Faks
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.Email)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.Email
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.Web)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.Web
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.Adres)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.Adres
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @Html.LabelFor_(m => m.SehirId)
                            </div>
                            <div class="col-md-10" style="padding-top: 7px;margin-bottom: 0;">
                                @Model.SehirId / @Model.SehirId
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("KurumKutusu", Model)
}
@Html.DeleteConfirmation("KurumSil", "kurum-sil")
