@model MedyaAyarlarıModel

@{
    ViewBag.Title = "Medya";
    Html.AktifMenuÖğesiSistemAdıBelirle("Medya ayarları");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Medya Ayarları
        </h1>
        <div class="pull-right">
            <button type="submit" name="kaydet" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Kaydet
            </button>
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            @Html.Action("Mod", "Ayarlar")
            @Html.ValidationSummary(false)

            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Medya Ayarları
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor_(model => model.ResimVeritabanındaDepola)
                            </div>
                            <div class="col-md-1">
                                <div class="form-text-row">
                                    @if (Model.ResimVeritabanındaDepola)
    {
                                <text>Veritabanı</text>
}
else
{
                                <text>Dosya Sistemi</text>
}
                                </div>
                            </div>
                            <div class="col-md-8">
                                <button type="submit" id="change-picture-storage" name="change-picture-storage" class="btn btn-primary">
                                    Değiştir
                                </button>
                                @Html.ActionConfirmation("change-picture-storage")
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-9 col-md-offset-3">
                                <span>NOT: Bu seçeneği değiştirmeden önce veritabanınızı yedeklemeyi unutmayın</span>
                            </div>
                        </div>
                        <div class="form-group advanced-setting">
                            <div class="col-md-3">
                                @Html.LabelFor_(model => model.MaksimumResimBoyutu)
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor_(model => model.MaksimumResimBoyutu)
                                @Html.ValidationMessageFor(model => model.MaksimumResimBoyutu)
                            </div>
                        </div>
                        <div class="form-group advanced-setting">
                            <div class="col-md-3">
                                @Html.LabelFor_(model => model.CokluThumbKlasorleri)
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor_(model => model.CokluThumbKlasorleri)
                                @Html.ValidationMessageFor(model => model.CokluThumbKlasorleri)
                            </div>
                        </div>
                        <div class="form-group advanced-setting">
                            <div class="col-md-3">
                                @Html.LabelFor_(model => model.VarsayılanResimKalitesi)
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor_(model => model.VarsayılanResimKalitesi)
                                @Html.ValidationMessageFor(model => model.VarsayılanResimKalitesi)
                            </div>
                        </div>
                        <div class="form-group advanced-setting">
                            <div class="col-md-3">
                                @Html.LabelFor_(model => model.VarsayılanResimZoomEtkin)
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor_(model => model.VarsayılanResimZoomEtkin)
                                @Html.ValidationMessageFor(model => model.VarsayılanResimZoomEtkin)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default advanced-setting">
                    <div class="panel-heading">
                        Diğer Sayfalar
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor_(model => model.KategoriThumbResimBoyutu)
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor_(model => model.KategoriThumbResimBoyutu)
                                @Html.ValidationMessageFor(model => model.KategoriThumbResimBoyutu)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor_(model => model.AvatarResimBoyutu)
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor_(model => model.AvatarResimBoyutu)
                                @Html.ValidationMessageFor(model => model.AvatarResimBoyutu)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}