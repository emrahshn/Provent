@model KongreTransferModel
@{
    var parabirimi = new List<SelectListItem>();
    parabirimi.Add(new SelectListItem() { Text = "TL", Value = "1" });
    parabirimi.Add(new SelectListItem() { Text = "$", Value = "2" });
    parabirimi.Add(new SelectListItem() { Text = "€", Value = "3" });
}
@Html.ValidationSummary(true)


<script>

</script>
@Html.HiddenFor(x => x.TransferModel.Id)
<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.LabelFor_(m => m.TransferModel.Adı)
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor_(m => m.TransferModel.Adı)
                            @Html.ValidationMessageFor(m => m.TransferModel.Adı)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.LabelFor_(m => m.TransferModel.Tutar)
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                @Html.EditorFor_(m => m.TransferModel.Tutar)
                                <div class="input-group-addon">
                                    @Html.DropDownListFor_(m => m.TransferModel.Döviz, parabirimi)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.LabelFor_(m => m.TransferModel.Tarih)
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor_(m => m.TransferModel.Tarih)
                            @Html.ValidationMessageFor(m => m.TransferModel.Tarih)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>