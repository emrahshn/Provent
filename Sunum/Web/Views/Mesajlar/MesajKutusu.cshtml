@model  IList<MesajModel>
@using Web.Models.Mesajlar;
@if (Model.Count > 0)
{
<div id="mesaj" class="mesaj">
    @foreach (var mesaj in Model)
    {
        if (mesaj.Bildirim)
        {
            <span>GÖnderen:Sistem</span>
        }
        else
        {
            <span>Gönderen:@mesaj.GonderenAdı</span>
        }
            <span class="msj">@mesaj.Msj;</span>
            <span class="msjTarih">@mesaj.OlusmaTarihi</span>
    }
</div>
}